root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
max_line_length = 80
trim_trailing_whitespace = true
insert_final_newline = true

# libgumbo still has the original 2 space indents
[{lib/,test/parser/,test/benchmark/}*.{c,cc,h,rl}]
indent_style = space
indent_size = 2

[{GNUmakefile,makefile,mk/*.mk}]
indent_style = tab
indent_size = 8

[.git/COMMIT_EDITMSG]
max_line_length = 72
